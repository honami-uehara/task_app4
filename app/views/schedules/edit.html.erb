<div class="infomation">
 <h2>スケジュール編集</h2>
</div>

<%= form_with model: @schedule do |f| %>
 <table>
  <tr>
   <th><%= f.label :title ,"タイトル" %></th>
   <td><%= f.text_field :title %></td>
  </tr>

  <tr>
   <th><%= f.label :start_at ,"開始日" %></th>
   <td><%= f.text_field :start_at %></td>
  </tr>
  
  <tr>
   <th><%= f.label :end_at ,"終了日" %></th>
   <td><%= f.text_field :end_at %></td>
  </tr>
  
  <tr>
   <th><%= f.label :all_day , "終日" %></th>
   <td>
   <%= check_box_tag :all_day %>
   <%= label_tag :all_day, "終日の場合はチェック" %></td>
  </tr>
  
  <tr>
   <th><%= f.label :memo ,"スケジュールメモ" %></th>
   <td><%= f.text_area :memo %></td>
  </tr>
</table>
 
<div>
 <ul>
  <li><%= f.submit "編集を完了する"%></li>
  <li><%= link_to "一覧に戻る", :schedules %></li>
 </ul>
</div>

<footer>
 <h1>現在の日時<%= Date.current.strftime('%Y/%m/%d') %></h1>
</footer>
<% end %>