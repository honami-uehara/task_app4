<div class="infomation">
 <h2>スケジュール新規作成</h2>
</div>

<%= form_with model: @schedule do |f| %>
 <table>
  <tr>
   <th><%= f.label :title,"タイトル" %></th>
   <td><%= f.text_field :title %></td>
  </tr>

  <tr>
   <th><%= f.label :start_at ,"開始日" %></th>
   <td><%= f.date_field :start_at %></td>
  </tr>
  
  <tr>
   <th><%= f.label :end_at ,"終了日" %></th>
   <td><%= f.date_field :end_at %></td>
  </tr>
  
  <tr>
   <th><%= f.label :all_day , "終日" %></th>
   <td><%= f.check_box :all_day %>
   <br>終日の場合はチエックを入れます</td>
  </tr>
  
  <tr>
   <th><%= f.label :memo ,"スケジュールメモ" %></th>
   <td><%= f.text_area :memo %></td>
  </tr>
</table>
 
<div>
 <ul>
  <li><%= f.submit "新規登録する"%></li>
  <li><%= link_to "一覧に戻る", :schedules %></li>
 </ul>
</div>
<% end %>

    